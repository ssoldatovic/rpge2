

<p>
  <strong>Name:</strong>
  <%= @hero.name %>
</p>

<p>
  <strong>Picture:</strong>
  <%= @hero.picture %>
</p>

<p>
  <strong>User:</strong>
  <%= @hero.user_id %>
</p>

<h3>Powers</h3>
<% @powers.each do |power| %>
  <div>
    <strong><%= power.user_id %></strong>
    <br />
    <p><%= power.name %></p>
    <% if user_signed_in? %>
	  <% if current_user.id == power.user_id %>

    	<p><%= link_to 'Delete', power_path(power), method: :delete, data: { confirm: 'Are you sure?' } %></p>

  	  <% end %>
	<% end %>
  </div>
<% end %>
<%= render 'powers/form' %>

<%= link_to 'Edit', edit_hero_path(@hero) %> |
<%= link_to 'Back', heros_path %>
