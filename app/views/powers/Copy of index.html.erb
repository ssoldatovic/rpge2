<img src="/assets/banner6.jpg" class="img-responsive">

<h1>Listing Powers</h1>

<p><%= paginate @powers %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th>Picture</th>
      <th>User</th>
      <th>Hero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @powers.each do |power| %>
      <tr>
        <td><%= power.name %></td>
        <td><%= power.value %></td>
        <td><%= power.picture %></td>
        <td><%= power.user_id %></td>
        <td><%= power.hero_id %></td>
        <td><%= link_to 'Show', power %></td>
        <td><%= link_to 'Edit', edit_power_path(power) %></td>
        <td><%= link_to 'Destroy', power, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Power', new_power_path %>
